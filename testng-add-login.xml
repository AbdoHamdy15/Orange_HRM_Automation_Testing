<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Add and Login Tests Suite">
    <listeners>
        <listener class-name="listeners.TestNGListeners"/>
    </listeners>
    
    <!-- Add and Login Tests -->
    <test name="Add and Login Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.features.AddEmployeeTest"/>
            <class name="tests.features.AddUserTest"/>
            <class name="tests.features.AddCandidateTest"/>
            <class name="tests.features.LoginTest"/>
        </classes>
    </test>
</suite>
