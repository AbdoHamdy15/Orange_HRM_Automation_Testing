<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" parallel="false">
    <listeners>
        <listener class-name="listeners.TestNGListeners"/>
        <listener class-name="listeners.RetryListener"/>
    </listeners>
    <test name="Smoke Tests">
        <parameter name="browser" value="edge"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.features.LoginTest"/>
            <class name="tests.features.AddEmployeeTest"/>
            <class name="tests.features.PIMSearchTest"/>
            <class name="tests.features.myInfo.PersonalDetailsTest"/>
            <class name="tests.features.myInfo.ContactDetailsTest"/>
        </classes>
    </test>
</suite> 