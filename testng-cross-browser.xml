<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Login Test Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="listeners.TestNGListeners"/>
    </listeners>
    
    <!-- Chrome Login Tests -->
    <test name="Chrome Login Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.features.LoginTest"/>
        </classes>
    </test>
    
    <!-- Edge Login Tests -->
    <test name="Edge Login Tests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.features.LoginTest"/>
        </classes>
    </test>
    
    <!-- Firefox Login Tests -->
    <test name="Firefox Login Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.features.LoginTest"/>
        </classes>
    </test>
    
</suite> 